<theme>
<!-- Jotapê Arcades - tema com videos, editado de acordo com meu gosto e necessidade -->
	<formatVersion>4</formatVersion>
	
<feature supported="carousel">

		<view name="system, basic, detailed, video, grid">

			<!-- Custom Vertical System View -->
			<video name="console" extra="true">
				<maxSize>0.0 0.00</maxSize>
				<pos>0.00.0</pos>
			</video>

<!--	<sound name="directory">
	<path>./musicas/</path>
	</sound>
-->
	
	<sound name="bgsound">
	    
	</sound>

			<carousel name="systemcarousel">
                                <type>vertical</type> <!-- vertical_wheel -->
				<pos>-0.2 -0.4</pos>   <!-- direito up- ou down+ !!!! esquerdo left- ou right+ -->
				<size>1 1</size>
				<origin>0 0</origin>
				<color>FFFFFF00</color>
				<logoScale>1.5</logoScale>
				<logoSize>0.23 0.23</logoSize><!-- 0.2 0.2 só aumentar o tamanho que as logos no carrossel aparecem -->
				<logoRotation>-7.6</logoRotation>
				<logoRotationOrigin>3.5 0.3</logoRotationOrigin>
				<logoAlignment>center</logoAlignment> 
				<maxLogoCount>1</maxLogoCount>
				<zIndex>75</zIndex>
			</carousel>
			
			<text name="systemInfo"><!-- texto da quantidade de jogos -->
				<pos>0.2 0.7</pos>
				<size>0.0 0.050</size>
				<backgroundColor>FFFFFF00</backgroundColor>
				<color>f4ee21</color>
				<fontPath>./_art/menu.ttf</fontPath>
				<fontSize>0.03</fontSize>
				<alignment>right</alignment>
				<zIndex>98</zIndex>
			</text>

   </view>
</feature>


<view name="system, basic, detailed, video, grid">

<video name="sysbg0" extra="true">        <!--  carrega um video único pra todos os sistemas no menu principal -->
	<size>0.3 0.4</size>
	<color>ffffff</color>
	<path>./_art/video/nome do seu video.mp4</path>
	<size>0.3 0.4</size>
	<pos>0 0</pos>
	<zIndex>80</zIndex>
</video>


<helpsystem name="help">
	<pos>0.02 0.96</pos>
    <textColor>000000</textColor>
    <iconColor>000000</iconColor>
    <fontPath>./_art/menu.ttf</fontPath>
    <fontSize>0.026</fontSize>
</helpsystem>

</view>

<view name="basic, detailed, video, grid">

<image name="frame" extra="true">
	<color>FFFFFFFF</color>
	<path>./_art/frame.png</path>
	<size>1 1</size>
	<pos>0 0</pos>
	<zIndex>97</zIndex>
</image>

<textlist name="gamelist">
	<selectorColor>FFFFFF00</selectorColor>
	<selectedColor>cc6060CC</selectedColor>
	<selectorHeight>.05</selectorHeight>
	<primaryColor>F0F0F0</primaryColor>
	<secondaryColor>f4ee21</secondaryColor>
    <fontPath>./_art/giz6.ttf</fontPath>	
	<alignment>left</alignment>
	<pos>0.03 0.03</pos>
	<size>0.33 0.45</size>
	<fontSize>0.030</fontSize>
	<lineSpacing>1</lineSpacing>
	<zIndex>98</zIndex>
	<!-- <scrollSound>./_art/sons/menu.wav</scrollSound>   -->
</textlist>

<helpsystem name="help">
	<pos>0.02 0.96</pos> <!-- baixo desc - cima sobe -->
    <textColor>ffffff</textColor>
    <iconColor>ffffff</iconColor>
    <fontPath>./_art/menu.ttf</fontPath>
    <fontSize>0.026</fontSize>
</helpsystem>


		
</view>


<view name="detailed">

<image name="md_image">   <!-- screenshot no menu interno -->
		<origin>0.5 0.5</origin>
		<pos>0.75 0.535</pos>
		<maxSize>0.32 0.42</maxSize>
	<zIndex>99</zIndex>
</image>

</view>

<view name="video">

<video name="md_video">  <!-- video no menu interno -->
	<origin>0.5 0.5</origin>
	<pos>0.75 0.535</pos>
	<maxSize>0.32 0.42</maxSize>
	<delay>0.0</delay>
	<showSnapshotNoVideo>true</showSnapshotNoVideo>
	<showSnapshotDelay>false</showSnapshotDelay>
	<zIndex>99</zIndex>
</video>

<image name="md_marquee">
	<origin>0.5 0.5</origin>
	<pos>0.79 0.19</pos> <!-- esquerdo left- ou right+ !! 0.882 0.083 !!  direito up- ou down+ -->
	<maxSize>0.25 0.14</maxSize>
         <origin>0.5 0.5</origin>
      <!--   <pos>0.71 0.565</pos> -->
      <!--   <maxSize>0.1 0.1</maxSize> -->
	<zIndex>99</zIndex>
</image>

</view>
</theme>
